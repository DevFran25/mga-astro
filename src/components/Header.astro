    class="fixed w-full z-50 transition-all duration-300 bg-white/90 backdrop-blur-lg border-b border-gray-100/50 shadow-sm top-0"
>
    <div class="container mx-auto px-4 md:px-8">
        <div class="flex justify-between items-center h-24">
            <!-- Logo -->
            <a href="/" class="flex-shrink-0 flex items-center group">
                <img
                    src="/assets/img/logo-sinfondo.png"
                    alt="MGA Ingenieros Asociados E.I.R.L."
                    class="h-16 md:h-20 w-auto object-contain transition-transform duration-300 group-hover:scale-105"
                />
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-8 lg:space-x-10">
                <a
                    href="/"
                    class="nav-link text-sm font-semibold text-mga-gray hover:text-mga-blue uppercase tracking-wide transition-colors relative after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-mga-blue after:left-0 after:-bottom-1 after:transition-all hover:after:w-full"
                    >Inicio</a
                >
                <a
                    href="/#nosotros"
                    class="nav-link text-sm font-semibold text-mga-gray hover:text-mga-blue uppercase tracking-wide transition-colors relative after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-mga-blue after:left-0 after:-bottom-1 after:transition-all hover:after:w-full"
                    >Nosotros</a
                >
                <a
                    href="/portafolio"
                    class="nav-link text-sm font-semibold text-mga-gray hover:text-mga-blue uppercase tracking-wide transition-colors relative after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-mga-blue after:left-0 after:-bottom-1 after:transition-all hover:after:w-full"
                    >Proyectos</a
                >
                <a
                    href="/#servicios"
                    class="nav-link text-sm font-semibold text-mga-gray hover:text-mga-blue uppercase tracking-wide transition-colors relative after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-mga-blue after:left-0 after:-bottom-1 after:transition-all hover:after:w-full"
                    >Servicios</a
                >
                <a
                    href="/#presupuesto"
                    class="bg-gradient-to-r from-mga-blue to-[#0077b6] hover:from-[#004a7c] hover:to-[#005f9e] text-white px-6 py-3 rounded-full font-bold text-sm uppercase tracking-wider transition-all shadow-lg hover:shadow-mga-blue/40 transform hover:-translate-y-0.5"
                >
                    Cotizar Ahora
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button
                    id="mobile-menu-btn"
                    class="text-mga-gray p-2 focus:outline-none hover:bg-gray-100 rounded-lg transition-colors"
                >
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu Dropdown -->
    <div
        id="mobile-menu"
        class="hidden md:hidden bg-white/95 backdrop-blur-xl border-t border-gray-100 absolute w-full shadow-xl"
    >
        <div class="container mx-auto px-4 py-6 space-y-4">
            <a
                href="/"
                class="block text-lg font-medium text-mga-gray hover:text-mga-blue border-b border-gray-50 pb-2"
                >Inicio</a
            >
            <a
                href="/#nosotros"
                class="block text-lg font-medium text-mga-gray hover:text-mga-blue border-b border-gray-50 pb-2"
                >Nosotros</a
            >
            <a
                href="/portafolio"
                class="block text-lg font-medium text-mga-gray hover:text-mga-blue border-b border-gray-50 pb-2"
                >Proyectos</a
            >
            <a
                href="/#servicios"
                class="block text-lg font-medium text-mga-gray hover:text-mga-blue border-b border-gray-50 pb-2"
                >Servicios</a
            >
            <a
                href="/#presupuesto"
                class="block w-full text-center bg-mga-blue text-white py-3 rounded-lg font-bold shadow-md hover:bg-opacity-90 transition-opacity"
                >Solicitar Presupuesto</a
            >
        </div>
    </div>
</nav>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Mobile Menu
        const btn = document.getElementById("mobile-menu-btn");
        const menu = document.getElementById("mobile-menu");
        if (btn && menu) {
            btn.addEventListener("click", () => {
                menu.classList.toggle("hidden");
                const icon = btn.querySelector("i");
                if (menu.classList.contains("hidden")) {
                    icon?.classList.remove("fa-times");
                    icon?.classList.add("fa-bars");
                } else {
                    icon?.classList.remove("fa-bars");
                    icon?.classList.add("fa-times");
                }
            });
        }

        // Sticky Navbar
        window.addEventListener("scroll", function () {
            const navbar = document.getElementById("main-navbar");
            if (navbar) {
                if (window.scrollY > 20) {
                    navbar.classList.add("shadow-md", "bg-white/95");
                    navbar.classList.remove("bg-white/90");
                } else {
                    navbar.classList.remove("shadow-md", "bg-white/95");
                    navbar.classList.add("bg-white/90");
                }
            }
        });

        // Highlight active link
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll(".nav-link");
        navLinks.forEach((link) => {
            if (
                link.getAttribute("href") === currentPath ||
                (currentPath === "/" && link.getAttribute("href") === "/")
            ) {
                link.classList.add("text-mga-blue", "after:w-full");
                link.classList.remove("text-mga-gray");
            }
        });
    });
</script>
