---
import { projects } from "../data/projects";
---

<section id="proyectos" class="py-24 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span
                class="text-white font-bold tracking-wider uppercase text-sm bg-mga-orange px-3 py-1 rounded-full shadow-lg shadow-orange-200"
                >Portafolio</span
            >
            <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mt-6 mb-6">
                Nuestros Proyectos Destacados
            </h2>
            <p class="text-slate-700 text-lg font-medium">
                Una muestra de nuestra capacidad t√©cnica y ejecutiva en obras de
                diversa complejidad a lo largo del territorio nacional.
            </p>
        </div>

        <!-- Project Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.slice(0, 3).map((project) => (
                    <a
                        href={`/proyectos/${project.id}`}
                        class="group relative overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 cursor-pointer border-2 border-slate-100 hover:border-mga-blue hover:shadow-[0_20px_40px_rgba(33,185,235,0.15)] hover:-translate-y-2 block h-full"
                    >
                        <div class="relative h-64 overflow-hidden">
                            <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-mga-blue/10 transition-colors z-10 pointer-events-none" />
                            <img
                                src={project.image}
                                alt={project.title}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            <div class="absolute top-4 right-4 z-20 bg-white text-xs font-bold text-mga-blue px-3 py-1 rounded-full uppercase tracking-wide shadow-md">
                                {project.category}
                            </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-mga-blue transition-colors">
                                {project.title}
                            </h3>
                            <p class="text-slate-600 text-sm mb-4 line-clamp-2">
                                {project.shortDesc}
                            </p>
                            <div class="flex items-center justify-between border-t border-slate-100 pt-4">
                                <span class="text-xs text-slate-500 font-medium">
                                    <i class="fas fa-map-marker-alt mr-1 text-mga-orange" />
                                    {project.location}
                                </span>
                                <span class="text-mga-blue text-sm font-bold group-hover:translate-x-1 transition-transform">
                                    <i class="fas fa-arrow-right" />
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="text-center mt-12">
            <a
                href="/portafolio"
                class="inline-flex items-center px-8 py-4 bg-mga-blue text-white font-bold rounded-full hover:bg-white hover:text-mga-blue border-2 border-transparent hover:border-mga-blue transition-all transform hover:-translate-y-1 shadow-lg hover:shadow-mga-blue/30"
            >
                Ver Portafolio Completo
            </a>
        </div>
    </div>
</section>
