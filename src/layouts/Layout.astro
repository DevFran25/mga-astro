---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
}

const {
	title = "MGA Ingenieros Asociados - Consultora de Construcción e Ingeniería",
	description = "MGA Ingenieros Asociados EIRL: Consultora líder en Perú especializada en Infraestructura, Energía, Edificaciones y Medio Ambiente.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth overflow-x-hidden">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/assets/img/MGA_LOGO.png" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="MGA Ingenieros, Construcción Perú, Consultora Ingeniería, Infraestructura, Energía, Edificaciones, Medio Ambiente, RUC 20541144511"
		/>
		<meta name="author" content="MGA Ingenieros Asociados EIRL" />

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/assets/img/logo.png" />
		<meta property="og:type" content="website" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>

		<!-- Icons -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
		/>
	</head>
	<body class="bg-gray-50 text-mga-gray font-sans antialiased w-full">
		<main class="w-full overflow-x-hidden relative">
			<slot />
		</main>

		<!-- Scroll Reveal & Main Logic handled by components or client scripts -->
	</body>
</html>
