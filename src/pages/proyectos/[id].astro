---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { projects } from "../../data/projects";

export async function getStaticPaths() {
    return projects.map((project) => ({
        params: { id: project.id },
        props: { project },
    }));
}

const { project } = Astro.props;
---

<Layout title={`${project.title} - MGA Ingenieros Asociados`}>
    <Header />

    <!-- Hero Section -->
    <div class="relative h-[60vh] min-h-[500px] w-full overflow-hidden">
        <div class="absolute inset-0 bg-slate-900/50 z-10"></div>
        <div
            class="absolute inset-0 bg-cover bg-center"
            style={`background-image: url('${project.image}');`}
        >
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent z-20"
        >
        </div>

        <div
            class="container mx-auto px-4 relative z-30 h-full flex flex-col justify-end pb-20"
        >
            <div class="animate-fade-up">
                <span
                    class="inline-block px-4 py-1.5 rounded-full bg-mga-orange text-white text-sm font-bold tracking-wider uppercase mb-4 shadow-lg shadow-orange-500/30"
                >
                    {project.category}
                </span>
                <h1
                    class="text-4xl md:text-6xl font-bold text-white mb-4 leading-tight"
                >
                    {project.title}
                </h1>
                <div class="flex items-center text-slate-300 text-lg">
                    <i class="fas fa-map-marker-alt text-mga-blue mr-2"></i>
                    {project.location}
                </div>
            </div>
        </div>
    </div>

    <main class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-12">
                    <!-- Description -->
                    <div class="prose prose-lg max-w-none text-slate-600">
                        <h3
                            class="text-2xl font-bold text-slate-900 mb-4 border-l-4 border-mga-blue pl-4"
                        >
                            Descripción del Proyecto
                        </h3>
                        <p class="leading-relaxed">
                            {project.description}
                        </p>
                    </div>

                    <!-- Scope -->
                    <div
                        class="bg-slate-50 rounded-2xl p-8 border border-slate-100"
                    >
                        <h3
                            class="text-xl font-bold text-slate-900 mb-4 flex items-center"
                        >
                            <i
                                class="fas fa-tasks text-mga-blue mr-3 bg-blue-100 p-2 rounded-lg"
                            ></i>
                            Alcance del Proyecto
                        </h3>
                        <p class="text-slate-600 leading-relaxed">
                            {project.scope}
                        </p>
                    </div>

                    <!-- Gallery -->
                    <div>
                        <h3
                            class="text-2xl font-bold text-slate-900 mb-6 border-l-4 border-mga-orange pl-4"
                        >
                            Galería de Imágenes
                        </h3>

                        <!-- Main Viewer -->
                        <div
                            class="rounded-2xl overflow-hidden shadow-xl mb-4 h-[400px] md:h-[500px] relative group bg-slate-100"
                        >
                            <img
                                id="main-gallery-image"
                                src={project.gallery[0]}
                                alt={project.title}
                                class="w-full h-full object-cover transition-all duration-500"
                            />
                            <div
                                class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors pointer-events-none"
                            >
                            </div>
                        </div>

                        <!-- Thumbnails -->
                        <div class="grid grid-cols-4 gap-4">
                            {
                                project.gallery.map((img, index) => (
                                    <button
                                        class="gallery-thumb rounded-xl overflow-hidden h-24 border-2 border-transparent hover:border-mga-blue transition-all cursor-pointer opacity-70 hover:opacity-100 focus:opacity-100 focus:border-mga-blue focus:outline-none"
                                        onclick={`document.getElementById('main-gallery-image').src = '${img}'`}
                                    >
                                        <img
                                            src={img}
                                            alt={`Gallery ${index + 1}`}
                                            class="w-full h-full object-cover"
                                        />
                                    </button>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <div
                        class="bg-white rounded-2xl shadow-[0_10px_40px_rgba(0,0,0,0.08)] border border-slate-100 p-8 sticky top-32"
                    >
                        <h3
                            class="text-xl font-bold text-slate-900 mb-6 pb-4 border-b border-slate-100"
                        >
                            Ficha Técnica
                        </h3>

                        <div class="space-y-6">
                            <div>
                                <span
                                    class="block text-sm font-bold text-slate-400 uppercase tracking-wider mb-1"
                                    >Cliente</span
                                >
                                <div class="font-bold text-slate-800 text-lg">
                                    {project.client}
                                </div>
                            </div>

                            <div>
                                <span
                                    class="block text-sm font-bold text-slate-400 uppercase tracking-wider mb-1"
                                    >Ubicación</span
                                >
                                <div
                                    class="font-bold text-slate-800 text-lg flex items-center"
                                >
                                    <i
                                        class="fas fa-map-marker-alt text-mga-orange mr-2"
                                    ></i>
                                    {project.location}
                                </div>
                            </div>

                            <div>
                                <span
                                    class="block text-sm font-bold text-slate-400 uppercase tracking-wider mb-1"
                                    >Año</span
                                >
                                <div class="font-bold text-slate-800 text-lg">
                                    {project.year}
                                </div>
                            </div>

                            <div>
                                <span
                                    class="block text-sm font-bold text-slate-400 uppercase tracking-wider mb-2"
                                    >Servicios</span
                                >
                                <div class="flex flex-wrap gap-2">
                                    {
                                        project.services.map((service) => (
                                            <span class="px-3 py-1 bg-slate-100 text-slate-600 text-sm font-medium rounded-lg">
                                                {service}
                                            </span>
                                        ))
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="mt-8 pt-8 border-t border-slate-100">
                            <a
                                href="#contacto"
                                class="block w-full text-center bg-mga-blue text-white py-3 rounded-xl font-bold hover:bg-white hover:text-mga-blue border-2 border-transparent hover:border-mga-blue transition-all shadow-lg hover:shadow-mga-blue/30"
                            >
                                Cotizar Similar
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-20 pt-10 border-t border-slate-200 text-center">
                <a
                    href="/#proyectos"
                    class="inline-flex items-center text-slate-500 font-bold hover:text-mga-blue transition-colors"
                >
                    <i class="fas fa-arrow-left mr-2"></i> Volver a Proyectos
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
