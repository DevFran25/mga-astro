---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { projects } from "../data/projects";
---

<Layout title="Portafolio de Proyectos - MGA Ingenieros Asociados">
    <Header />

    <!-- Header Page -->
    <header class="bg-slate-900 pt-32 pb-20 relative overflow-hidden">
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/90 to-mga-blue/20"
            >
            </div>
        </div>
        <div class="container mx-auto px-4 relative z-10 text-center">
            <h1
                class="text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-up"
            >
                Nuestro Portafolio
            </h1>
            <p
                class="text-xl text-slate-300 max-w-2xl mx-auto animate-fade-up"
                style="animation-delay: 0.1s"
            >
                Una selección de nuestros proyectos más destacados, demostrando
                nuestra capacidad técnica y compromiso con la excelencia.
            </p>
        </div>
    </header>

    <!-- Portfolio Grid -->
    <section class="py-20 bg-slate-50">
        <div class="container mx-auto px-4">
            <!-- Filter Logic & State -->
            <div id="portfolio-app" class="min-h-[800px]">
                <!-- Filters -->
                <div class="flex flex-wrap justify-center gap-4 mb-12">
                    <button
                        class="filter-btn px-6 py-2 bg-mga-blue text-white rounded-full font-bold text-sm shadow-lg transition-all transform hover:-translate-y-1"
                        data-category="Todos">Todos</button
                    >
                    <button
                        class="filter-btn px-6 py-2 bg-white text-slate-600 border border-slate-200 rounded-full font-bold text-sm hover:bg-slate-50 transition-all transform hover:-translate-y-1"
                        data-category="Infraestructura">Infraestructura</button
                    >
                    <button
                        class="filter-btn px-6 py-2 bg-white text-slate-600 border border-slate-200 rounded-full font-bold text-sm hover:bg-slate-50 transition-all transform hover:-translate-y-1"
                        data-category="Energía">Energía</button
                    >
                    <button
                        class="filter-btn px-6 py-2 bg-white text-slate-600 border border-slate-200 rounded-full font-bold text-sm hover:bg-slate-50 transition-all transform hover:-translate-y-1"
                        data-category="Edificación">Edificación</button
                    >
                    <button
                        class="filter-btn px-6 py-2 bg-white text-slate-600 border border-slate-200 rounded-full font-bold text-sm hover:bg-slate-50 transition-all transform hover:-translate-y-1"
                        data-category="Medio Ambiente">Medio Ambiente</button
                    >
                </div>

                <!-- Grid Container -->
                <div
                    id="projects-grid"
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16 animate-fade-in"
                >
                    <!-- Projects injected here via JS -->
                </div>

                <!-- Pagination Controls -->
                <div
                    id="pagination-controls"
                    class="flex justify-center flex-wrap gap-2 text-sm font-bold"
                >
                    <!-- Pagination injected here -->
                </div>
            </div>
        </div>
    </section>

    <!-- Client-Side Logic -->
    <script define:vars={{ projects }}>
        // State
        let currentCategory = "Todos";
        let currentPage = 1;
        const itemsPerPage = 6;
        let filteredProjects = [...projects];

        // DOM Elements
        const gridContainer = document.getElementById("projects-grid");
        const paginationContainer = document.getElementById(
            "pagination-controls",
        );
        const filterButtons = document.querySelectorAll(".filter-btn");

        // Functions
        function filterProjects(category) {
            currentCategory = category;
            currentPage = 1; // Reset to page 1

            if (category === "Todos") {
                filteredProjects = projects;
            } else {
                filteredProjects = projects.filter(
                    (p) => p.category === category,
                );
            }

            render();
            updateFilterButtons();
        }

        function changePage(page) {
            if (
                page < 1 ||
                page > Math.ceil(filteredProjects.length / itemsPerPage)
            )
                return;
            currentPage = page;
            render();
            // Scroll to top of grid smoothly
            gridContainer.scrollIntoView({
                behavior: "smooth",
                block: "start",
            });
        }

        function getServiceBadge(services) {
            return services && services.length > 0 ? services[0] : "General";
        }

        function render() {
            // 1. Calculate Slice
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const visibleProjects = filteredProjects.slice(
                startIndex,
                endIndex,
            );

            // 2. Render Grid
            if (visibleProjects.length === 0) {
                gridContainer.innerHTML = `<div class="col-span-full text-center text-slate-500 py-12">No se encontraron proyectos en esta categoría.</div>`;
            } else {
                gridContainer.innerHTML = visibleProjects
                    .map(
                        (project) => `
                    <a href="/proyectos/${project.id}" class="group relative overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-500 cursor-pointer border-2 border-slate-100 hover:border-mga-blue hover:shadow-[0_20px_40px_rgba(33,185,235,0.15)] hover:-translate-y-2 block h-full animate-fade-up">
                        <div class="relative h-64 overflow-hidden">
                            <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-mga-blue/10 transition-colors z-10 pointer-events-none"></div>
                            <img src="${project.image}" alt="${project.title}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                            <div class="absolute top-4 right-4 z-20 bg-white text-xs font-bold text-mga-blue px-3 py-1 rounded-full uppercase tracking-wide shadow-md">
                                ${project.category}
                            </div>
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-slate-900 mb-2 group-hover:text-mga-blue transition-colors line-clamp-1">
                                ${project.title}
                            </h3>
                            <div class="mb-4">
                                <p class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-1">Cliente</p>
                                <p class="text-sm font-semibold text-slate-700 truncate">${project.client}</p>
                            </div>
                            <p class="text-slate-600 text-sm mb-4 line-clamp-2 h-10">
                                ${project.shortDesc}
                            </p>
                            <div class="flex items-center justify-between border-t border-slate-100 pt-4">
                                <span class="px-2 py-1 bg-slate-100 text-slate-600 text-xs font-bold rounded">
                                    ${getServiceBadge(project.services)}
                                </span>
                                <span class="text-mga-blue text-sm font-bold group-hover:translate-x-1 transition-transform">
                                    Ver Detalle <i class="fas fa-arrow-right ml-1"></i>
                                </span>
                            </div>
                        </div>
                    </a>
                `,
                    )
                    .join("");
            }

            // 3. Render Pagination
            const totalPages = Math.ceil(
                filteredProjects.length / itemsPerPage,
            );

            if (totalPages > 1) {
                let paginationHTML = "";

                // Prev
                paginationHTML += `<button onclick="window.dispatchPage(this, ${currentPage - 1})" class="px-4 py-2 rounded-lg border ${currentPage === 1 ? "border-slate-100 text-slate-300 cursor-not-allowed" : "border-slate-200 hover:bg-mga-blue hover:text-white hover:border-mga-blue transition-colors"}" ${currentPage === 1 ? "disabled" : ""}><i class="fas fa-chevron-left"></i></button>`;

                // Pages
                for (let i = 1; i <= totalPages; i++) {
                    if (i === currentPage) {
                        paginationHTML += `<button class="px-4 py-2 rounded-lg bg-mga-blue text-white shadow-md">${i}</button>`;
                    } else {
                        paginationHTML += `<button onclick="window.dispatchPage(this, ${i})" class="px-4 py-2 rounded-lg border border-slate-200 text-slate-600 hover:bg-slate-50 transition-colors">${i}</button>`;
                    }
                }

                // Next
                paginationHTML += `<button onclick="window.dispatchPage(this, ${currentPage + 1})" class="px-4 py-2 rounded-lg border ${currentPage === totalPages ? "border-slate-100 text-slate-300 cursor-not-allowed" : "border-slate-200 hover:bg-mga-blue hover:text-white hover:border-mga-blue transition-colors"}" ${currentPage === totalPages ? "disabled" : ""}><i class="fas fa-chevron-right"></i></button>`;

                paginationContainer.innerHTML = paginationHTML;
            } else {
                paginationContainer.innerHTML = "";
            }
        }

        function updateFilterButtons() {
            filterButtons.forEach((btn) => {
                if (btn.dataset.category === currentCategory) {
                    btn.classList.remove(
                        "bg-white",
                        "text-slate-600",
                        "border-slate-200",
                    );
                    btn.classList.add("bg-mga-blue", "text-white", "shadow-lg");
                } else {
                    btn.classList.add(
                        "bg-white",
                        "text-slate-600",
                        "border-slate-200",
                    );
                    btn.classList.remove(
                        "bg-mga-blue",
                        "text-white",
                        "shadow-lg",
                    );
                }
            });
        }

        // Init Interactions
        filterButtons.forEach((btn) => {
            btn.addEventListener("click", (e) => {
                filterProjects(e.target.dataset.category);
            });
        });

        // Global function for inline onclicks (simple hack for Astro scripts scoping)
        window.dispatchPage = (el, page) => {
            changePage(page);
        };

        // Initial Render
        render();
    </script>

    <Footer />
</Layout>
